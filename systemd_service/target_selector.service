[Unit]
Description=the target-selector
After=redis_server.service
Requires=redis_server.service
StartLimitInterval=0

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
ExecStart=/home/cosmic/anaconda3/envs/cosmic_vla/bin/targets_minimal --pointing_channel target-selector:new-pointing --config_file /home/cosmic/conf/targetselector_mysql_conf.yml
Restart=on-failure
RestartSec=1
StandardOutput=append:/home/cosmic/logs/target_selector.log
StandardError=append:/home/cosmic/logs/target_selector.log
